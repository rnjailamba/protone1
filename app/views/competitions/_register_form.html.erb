


<div id="register_form">
	<% if user_signed_in? %>
	  <% if current_user.attending_competitions.include?(@competition) %>
	    <%= render 'unregister' %>
	  <% else %>
	    <%= render 'register' %>
	  <% end %>
	<% else %>
		<div class="registerevent">
		        
			<div id="wrapper">
			    	<div id="box">
			        	<div id="top_header">
			          		
			          		<h5>Register for the event</h5>
			        	</div>
			        
				        <div id="inputs">

				        	
				        	
									<input type='hidden' name='submitted' id='submitted' value='1'/>

								
									<input type='text' name='username' id='username' value='' maxlength="50" size="30" placeholder="Username"/><br/>
								
								
								
									<input type='password' name='password' id='password' maxlength="50" size="30" placeholder="Password" /><br/>
								
								

									<input type='submit' name='Submit' value='Register'  />


							

					        
	        			</div><!-- inputs end -->
    				</div><!--box ends -->



    		</div><!--wrapper ends -->
		</div><!-- register event ends -->

	<% end %>

 </div>